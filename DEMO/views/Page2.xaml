<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DEMO.views.Page2">
    <ContentPage.Content>
        <StackLayout>
            <Frame BackgroundColor="Teal"/>
            <Label Text="{Binding Nombre1}" TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding Nombre2}" TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding apellido1}" TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding apellido2}" TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding edad}" TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

            <Label Text="{Binding email}" TextColor="White"
                VerticalOptions="Center" 
                HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>